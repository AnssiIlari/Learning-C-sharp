<Window x:Class="CanvasApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CanvasApp"
        mc:Ignorable="d"
        Title="Canvas harjoituksia" Height="450" Width="800">
    <Canvas x:Name="myCanvas">
        <Rectangle Width="100" Height="20" 
                   Canvas.Left="10" 
                   Canvas.Top="10" 
                   Fill="DarkOliveGreen" />

        <Ellipse Width="60" Height="60" 
                 Stroke="Black" 
                 StrokeThickness="2" 
                 Fill="Orange" 
                 Canvas.Right="20"
                 Canvas.Bottom="20"
                 />

        <Line Stroke="Black" Y2="100" Canvas.Bottom="50" Canvas.Right="50" />
        <Line Stroke="Black" X1="0" Y1="100" X2="100"  Y2="100" Canvas.Left="100"/>
        
        <Button Content="btnButton" Name="btnButton" Canvas.Left="380" Canvas.Top="202"/>



    </Canvas>
</Window>
