<Window x:Class="Menu_ja_Toolbar.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Menu_ja_Toolbar"
        mc:Ignorable="d"
        Title="Menu ja toolbar" Height="450" Width="800">
    <StackPanel>
        <Menu Height="20">
            <MenuItem Header="Tiedosto">
                <MenuItem Header="Avaa..."/>
                <MenuItem Header="Tallenna..."/>
                <MenuItem Header="Tallenna nimellä..."/>
                <Separator/>
                <MenuItem Header="Sulje"/>
            </MenuItem>
            <MenuItem Header="Muokkaa">
                <MenuItem Header="Cut"/>
                <MenuItem Header="Copy..."/>
                <MenuItem Header="Paste..."/>
            </MenuItem>

        </Menu>
        
        <ToolBar Height="40" Width="800">
            <Button Content="Avaa"/>
            <Button Content="Sulje"/>
            <Image  />
            <Image Source="/Save.jpg"/>
            <Image Source="/delete.jpg"/>
            <Image Source="/Undo.jpg"/>
            <Image Source="/redo.jpg"/>

        </ToolBar>





    </StackPanel>

</Window>
