<Window x:Class="PizzaApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PizzaApp"
        mc:Ignorable="d"
        Title="Pizza" Height="450" Width="800">
    <StackPanel>
        <ComboBox x:Name="comPizzas" DisplayMemberPath="Name"/>
        <Button Content="Lisää pizza" Click="AddPizza"/>
        <Button Content="Päivitä valittu pitsa" Click="UpdateSelected"/>
        <Button Content="Poista valittu pitsa" Click="RemoveSelectedPizza" />

    </StackPanel>
</Window>
