<Window x:Class="PizzaApp.AddNewPizza"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PizzaApp"
        mc:Ignorable="d"
        Title="Lisää uusi pizza" Height="150" Width="225">
    <Canvas>
        <Label Content="Numero" Canvas.Left="10" Canvas.Top="10"/>
        <Label Content="Nimi" Canvas.Left="10" Canvas.Top="36"/>
        
        <TextBox Text="{Binding Number}" Canvas.Left="64" TextWrapping="Wrap" Canvas.Top="14" Width="120"/>
        <TextBox Text="{Binding Name}" Canvas.Left="64" TextWrapping="Wrap" Canvas.Top="40" Width="120" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        
        <Button Content="Lisää" Canvas.Left="120" Canvas.Top="63" HorizontalAlignment="Left" VerticalAlignment="Top" Width="60" Click="Button_Click"/>




    </Canvas>
</Window>
