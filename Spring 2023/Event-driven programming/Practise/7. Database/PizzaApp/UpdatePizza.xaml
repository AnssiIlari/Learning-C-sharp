<Window x:Class="PizzaApp.UpdatePizza"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PizzaApp"
        mc:Ignorable="d"
        Title="Päivitä pizzan tiedot" Height="125" Width="225">
    <Canvas>
        <Label Content="Numero" Canvas.Left="10" Canvas.Top="10"/>
        <Label Content="Nimi" Canvas.Left="10" Canvas.Top="36"/>

        <Label Content="{Binding Number}" Canvas.Left="64" Canvas.Top="14" Width="120"/>
        <TextBox Text="{Binding Name}" Canvas.Left="64" TextWrapping="Wrap" Canvas.Top="40" Width="120" HorizontalAlignment="Left" VerticalAlignment="Top"/>

        <Button Content="Päivitä" Canvas.Left="124" Canvas.Top="63" HorizontalAlignment="Left" VerticalAlignment="Center" Width="60" Click="Button_Click"/>




    </Canvas>
</Window>
